}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Descripci√≥n</label>
            <input asp-for="Descripcion" class="form-control" />
